<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/gray"/>
            <stroke android:width="1dp"
                android:color="@color/gray"/>
            <corners
                android:radius="10dp"/>


        </shape>
    </item>

    <item
        >
        <shape>
            <solid
                android:color="@color/white"/>
            <stroke android:width="1dp"
                android:color="@color/gray"/>
            <corners
                android:radius="10dp"/>


        </shape>
    </item>


</selector>
